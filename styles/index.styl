@import 'helpers.styl'
@import './titlebar'

html, body
  overflow: hidden
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  background-color: main-color

main
  padding: 0 20px 20px
  default-font()
  overflow: hidden
  background-color: main-color
  color: white
  text-align: left

  h1
    default-font()
    margin: 0 0 10px
    font-size: 40px
    user-select: none

  p
    overflow: hidden
    margin: 5px
    user-select: none

  span
    font-weight: bold